# App Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="Next.js Starter"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Server-side API base URL (used by server actions in Docker). Leave unset when running Next.js on host.
# In Docker dev, set to internal hostname, e.g. API_URL=http://web:80
API_URL="http://web:80"

# Build Configuration
BUILD_STANDALONE=false

# Feature Flags
ENABLE_ANALYTICS=false

# Docker environment variables
UID=1000
GID=1000
DOCKER_IMAGE_TAG=local

# Django environment variables
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@devxhub.com
DJANGO_SUPERUSER_PASSWORD=1password!

# Database environment variables
DB_NAME=devxhub
DB_USER=devxhub
DB_PASSWORD=password

# Twilio environment variables (for SMS/phone verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
