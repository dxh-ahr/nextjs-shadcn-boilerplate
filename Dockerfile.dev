FROM node:20-alpine

RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy package files first for better layer caching
COPY package.json pnpm-lock.yaml ./
# Copy pnpm-workspace.yaml if it exists (optional for monorepos)
COPY pnpm-workspace.yaml* ./

# Install all dependencies (including devDependencies for development)
# Use --frozen-lockfile to ensure consistent installs
RUN pnpm install --frozen-lockfile

# Copy entrypoint script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Copy the rest of the application (this will be overridden by volume mount in dev)
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Use entrypoint to ensure dependencies are installed
ENTRYPOINT ["/docker-entrypoint.sh"]

# Start development server
CMD ["pnpm", "dev"]
